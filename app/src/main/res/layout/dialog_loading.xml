<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/dialog_loading_pb_loading"
        android:layout_width="@dimen/layout_width_xl"
        android:layout_height="@dimen/layout_height_l"
        android:indeterminateBehavior="repeat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_loading_tv_hint"
        android:layout_width="@dimen/layout_width_xl"
        android:layout_height="@dimen/layout_height_s"
        android:gravity="center"
        android:text="加载中"
        android:textSize="@dimen/text_size_s" />


</LinearLayout>
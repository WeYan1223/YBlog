<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_m"
    android:paddingBottom="@dimen/padding_m">

    <com.cn.yblog.widget.RoundHeader
        android:id="@+id/item_comment_round_header"
        android:layout_width="@dimen/layout_width_s"
        android:layout_height="@dimen/layout_height_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:name_size="@dimen/text_size_s" />

    <TextView
        android:id="@+id/item_comment_tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_s"
        android:maxLines="1"
        android:text="子疯"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_comment_round_header"
        app:layout_constraintTop_toTopOf="@id/item_comment_round_header" />

    <TextView
        android:id="@+id/item_comment_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_s"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="#333"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_comment_round_header"
        app:layout_constraintTop_toBottomOf="@id/item_comment_tv_user_name" />

    <TextView
        android:id="@+id/item_comment_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_s"
        android:text="2023-01-01 12:56:15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_comment_round_header"
        app:layout_constraintTop_toBottomOf="@id/item_comment_tv_content" />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_s"
        android:background="@color/gray_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_comment_round_header"
        app:layout_constraintTop_toBottomOf="@id/item_comment_tv_time" />

</androidx.constraintlayout.widget.ConstraintLayout>
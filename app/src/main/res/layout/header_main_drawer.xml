<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_width_xl">

    <com.cn.yblog.widget.RoundHeader
        android:id="@+id/header_main_drawer_round_header"
        android:layout_width="@dimen/layout_width_l"
        android:layout_height="@dimen/layout_width_l"
        app:layout_constraintBottom_toTopOf="@id/header_main_drawer_tv_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:name_size="@dimen/text_size_l" />

    <TextView
        android:id="@+id/header_main_drawer_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_height_s"
        android:gravity="center"
        android:text="欢迎你，疯子~~~"
        android:textSize="@dimen/text_size_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/header_main_drawer_round_header"
        app:layout_constraintStart_toStartOf="@id/header_main_drawer_round_header"
        app:layout_constraintTop_toBottomOf="@id/header_main_drawer_round_header" />

</androidx.constraintlayout.widget.ConstraintLayout>